---
import { MessageCircleMore } from "@lucide/astro";
import { Download } from "@lucide/astro";
import { MoveDown } from "@lucide/astro";
import ContactModal from "../ui/contact/ContactModal.astro";
---

<section
  id="home"
  class="hero relative bg-light-bg dark:bg-dark-bg min-h-screen flex items-center"
>
  <div
    class="container mx-auto px-4 pb-16 flex flex-col items-center justify-center text-center"
  >
    <header class="hero-header flex flex-col items-center mb-10">
      <h1
        class="text-6xl md:text-7xl font-extrabold text-black dark:text-white mb-3 drop-shadow-lg mt-10 md:mt-0"
        data-i18n="home.hero_name"
      >
      </h1>
      <h2
        class="text-3xl md:text-4xl font-bold mb-4 flex flex-col items-center justify-center text-center"
      >
        <span
          class="bg-gradient-to-r from-gengar-accent via-gengar-primary to-gengar-light bg-clip-text text-transparent text-center"
        >
          <span data-i18n="home.hero_title_1"></span><br />
          <span data-i18n="home.hero_title_2"></span>
        </span>
      </h2>
      <p
        class="hero-subtitle text-base md:text-lg text-gray-500 dark:text-gray-400 mb-8 max-w-2xl mx-auto text-center mx-4 sm:mx-8"
      >
        <span data-i18n="home.hero_subtitle"></span>
      </p>
    </header>
    <div
      class="hero-actions flex flex-col md:flex-row gap-4 justify-center mb-8"
    >
      <a
        href="/Mi_CV.pdf"
        download="Lucas Azaña CV.pdf"
        aria-label="Descargar CV en PDF"
        class="bg-gengar-primary text-white font-semibold rounded-xl px-6 py-3 shadow-lg transition-transform duration-300 ease-out hover:-translate-y-1 hover:shadow-2xl"
      >
        <Download size="20" aria-hidden="true" class="inline mr-2" />
        <span data-i18n="home.hero_cv"></span>
      </a>
      <button
        type="button"
        aria-label="Enviame un mensaje"
        id="open-contact-modal"
        class="bg-white dark:bg-dark-card text-gengar-primary font-semibold rounded-xl px-6 py-3 shadow-lg border border-gengar-primary transition-transform duration-300 ease-out hover:-translate-y-1 hover:shadow-2xl flex items-center justify-center"
      >
        <MessageCircleMore size="20" aria-hidden="true" class="inline mr-2" />
        <span data-i18n="home.hero_idea"></span>
      </button>
    </div>
    <div
      class="hero-stats grid grid-cols-3 gap-8 mt-8 text-center mx-auto max-w-2xl"
      aria-label="Estadísticas profesionales"
    >
      <div class="flex flex-col items-center">
        <span
          class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-1"
          >1+</span
        >
        <span
          class="text-base md:text-lg text-gray-500 dark:text-gray-400"
          data-i18n="home.hero_year"></span>
      </div>
      <div class="flex flex-col items-center">
        <span
          class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-1"
          >∞</span
        >
        <span
          class="text-base md:text-lg text-gray-500 dark:text-gray-400"
          data-i18n="home.hero_ideas"></span>
      </div>
      <div class="flex flex-col items-center">
        <span
          class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-1"
          >24/7</span
        >
        <span
          class="text-base md:text-lg text-gray-500 dark:text-gray-400"
          data-i18n="home.hero_programming"></span>
      </div>
    </div>
  </div>
  <div
    class="scroll-indicator absolute left-1/2 bottom-6 -translate-x-1/2 z-10"
  >
    <MoveDown
      size="32"
      class="animate-bounce text-gengar-primary dark:text-gengar-light"
    />
  </div>
</section>
<!-- circulos bg agrupados -->
<div
  class="absolute inset-0 opacity-20 dark:opacity-30 pointer-events-none"
  aria-hidden="true"
>
  <div
    class="absolute top-20 left-20 w-64 h-64 bg-gengar-primary rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-xl animate-float"
  >
  </div>
  <div
    class="absolute top-40 right-20 w-72 h-72 bg-gengar-accent rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-xl animate-float-delayed"
  >
  </div>
  <div
    class="absolute bottom-20 left-1/2 w-80 h-80 bg-gengar-light rounded-full mix-blend-multiply dark:mix-blend-screen filter blur-xl animate-float-reverse"
  >
  </div>
</div>
<ContactModal />
<script src="/scripts/modalContact.js" is:inline></script>
