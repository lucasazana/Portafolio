---
import { X } from "@lucide/astro";
---

<div
  id="contact-modal"
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 backdrop-blur-sm"
  style="display: none;"
  role="dialog"
  aria-modal="true"
  aria-labelledby="modal-title"
  tabindex="-1"
>
  <div
    class="modal-content bg-white dark:bg-dark-card rounded-2xl shadow-gengar-lg max-w-md p-8"
  >
    <div class="modal-header flex items-center justify-between mb-6">
      <h3
        id="modal-title"
        class="text-xl font-bold text-black dark:text-white"
        data-i18n="contact.modal_title"
      >
      </h3>
      <button
        type="button"
        id="close-modal"
        aria-label="Cerrar"
        class="text-gray-400 hover:text-gengar-primary p-2 rounded-full focus:outline-none"
      >
        <X size="24" aria-hidden="true" />
      </button>
    </div>
    <form name="contact" method="POST" data-netlify="true" class="space-y-5">
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
        >
          <span data-i18n="contact.label_name"></span>
          <input
            type="text"
            name="name"
            data-i18n-label="contact.placeholder_name"
            required
            class="w-full rounded-xl border border-gray-300 dark:border-gengar-pastel bg-white dark:bg-dark-card px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-gengar-primary"
          />
        </label>
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
        >
          <span data-i18n="contact.label_email"></span>
          <input
            type="email"
            name="email"
            data-i18n-label="contact.placeholder_email"
            required
            class="w-full rounded-xl border border-gray-300 dark:border-gengar-pastel bg-white dark:bg-dark-card px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-gengar-primary"
          />
        </label>
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
        >
          <span data-i18n="contact.label_message"></span>
          <textarea
            name="message"
            data-i18n-label="contact.placeholder_message"
            class="w-full rounded-xl border border-gray-300 dark:border-gengar-pastel bg-white dark:bg-dark-card px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-gengar-primary"
            style="height: 80px; resize: none;"
            readonly></textarea>
        </label>
      </div>
      <div>
        <button
          type="submit"
          aria-label="Send"
          data-i18n-label="contact.label_send"
          class="w-full bg-gengar-primary text-white font-semibold rounded-xl px-6 py-3 shadow-lg transition-transform duration-300 ease-out hover:-translate-y-1 hover:shadow-2xl"
        ></button>
      </div>
    </form>
  </div>
</div>
