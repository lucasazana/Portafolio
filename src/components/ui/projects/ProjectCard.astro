---
import { ExternalLink, Github } from "@lucide/astro";

interface Props {
  imageUrl: string;
  title: string;
  description: string;
  technologies: string[];
  demoLink?: string;
  codeLink?: string;
  category: string;
  stats?: Array<{ value: string; label: string; dataI18nLabel?: string }>;
  dataI18nTitle?: string;
  dataI18nDesc?: string;
  dataI18nCategory?: string;
}

const {
  imageUrl,
  title,
  description,
  technologies,
  demoLink,
  codeLink,
  category,
  stats,
  dataI18nTitle,
  dataI18nDesc,
  dataI18nCategory,
} = Astro.props;
---

<div class="projects-card">
  <!-- imagen con overlay -->
  <div class="projects-image">
    <img src={imageUrl} alt={title} />
    <div class="projects-category" data-i18n-category={dataI18nCategory}>
      {category}
    </div>
  </div>
  <!-- contenido de la card -->
  <div class="project-card-content">
    <!-- header de la card -->
    <div class="project-header">
      <h3 class="project-title" data-i18n-title={dataI18nTitle}>{title}</h3>
      <div class="project-links">
        {
          demoLink && (
            <a
              href={demoLink}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Ver Demo"
            >
              <ExternalLink size="16" />
            </a>
          )
        }
        {
          codeLink && (
            <a
              href={codeLink}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Ver cÃ³digo"
            >
              {" "}
              <Github size="16" />{" "}
            </a>
          )
        }
      </div>
    </div>
    <!-- description de la card -->
    <p class="project-description" data-i18n-desc={dataI18nDesc}>
      {description}
    </p>
    <!-- tecnologias usadas -->
    <div class="project-technologies">
      {technologies.map((tech) => <span class="tech-tag">{tech}</span>)}
    </div>
    <!-- stats de la card (solo si es neceario)-->
    {
      stats && stats.length > 0 && (
        <div class="project-stats">
          {" "}
          {stats.map((stat) => (
            <div class="stat">
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label" data-i18n-label={stat.dataI18nLabel}>
                {stat.label}
              </span>
            </div>
          ))}
        </div>
      )
    }
  </div>
</div>
