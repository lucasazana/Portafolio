---
import SkillCardLucide from "./SkillCardLucide.astro";
import {
  MessageSquare,
  Zap,
  Brain,
  RefreshCw,
  GraduationCap,
  Crosshair,
} from "@lucide/astro";
---

<div
  id="soft-skills-cards"
  class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 w-full max-w-6xl mx-auto"
  style="display: none;"
>
  <SkillCardLucide
    icon={MessageSquare}
    title="Comunicación activa"
    description="Expreso ideas con claridad y escucho para construir soluciones en equipo."
    dataI18nTitle="skills.skills_soft_communication"
    dataI18nDesc="skills.skills_soft_communication_desc"
  />

  <SkillCardLucide
    icon={Zap}
    title="Proactividad e iniciativa"
    description="Tomo acción sin esperar indicaciones, buscando siempre mejorar los resultados."
    dataI18nTitle="skills.skills_soft_proactivity"
    dataI18nDesc="skills.skills_soft_proactivity_desc"
  />

  <SkillCardLucide
    icon={Brain}
    title="Pensamiento analítico"
    description="Analizo problemas con lógica y enfoque para encontrar soluciones efectivas."
    dataI18nTitle="skills.skills_soft_analytical"
    dataI18nDesc="skills.skills_soft_analytical_desc"
  />

  <SkillCardLucide
    icon={RefreshCw}
    title="Adaptabilidad"
    description="Me ajusto con facilidad a nuevos entornos, retos y tecnologías."
    dataI18nTitle="skills.skills_soft_adaptability"
    dataI18nDesc="skills.skills_soft_adaptability_desc"
  />

  <SkillCardLucide
    icon={GraduationCap}
    title="Aprendizaje continuo"
    description="Busco aprender constantemente para crecer profesional y personalmente."
    dataI18nTitle="skills.skills_soft_learning"
    dataI18nDesc="skills.skills_soft_learning_desc"
  />

  <SkillCardLucide
    icon={Crosshair}
    title="Compromiso y responsabilidad"
    description="Cumplo objetivos con disciplina, constancia y enfoque en la calidad del trabajo."
    dataI18nTitle="skills.skills_soft_commitment"
    dataI18nDesc="skills.skills_soft_commitment_desc"
  />
</div>
